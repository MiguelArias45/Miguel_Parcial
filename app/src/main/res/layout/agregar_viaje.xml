<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/destino_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_destino"
        android:inputType="text"
        android:autofillHints="address"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/fecha_inicio_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_fecha_inicio"
        android:inputType="date"
        android:autofillHints="date"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/fecha_fin_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_fecha_fin"
        android:inputType="date"
        android:autofillHints="date"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/notas_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_notas"
        android:inputType="textMultiLine"
        android:autofillHints="note"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/actividades_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_actividades"
        android:inputType="textMultiLine"
        android:autofillHints="note"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/agregar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_agregar_viaje"
        android:padding="16dp" />
</LinearLayout>
