<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Viaje"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/inputDestino"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Destino"
        app:layout_constraintTop_toBottomOf="@id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/inputFechaInicio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha de Inicio"
        app:layout_constraintTop_toBottomOf="@id/inputDestino"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/inputFechaFin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Fecha de Fin"
        app:layout_constraintTop_toBottomOf="@id/inputFechaInicio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/inputActividades"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Actividades"
        app:layout_constraintTop_toBottomOf="@id/inputFechaFin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/inputPresupuesto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Presupuesto"
        app:layout_constraintTop_toBottomOf="@id/inputActividades"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar Viaje"
        app:layout_constraintTop_toBottomOf="@id/inputPresupuesto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
